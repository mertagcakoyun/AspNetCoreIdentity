@model SignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <form class="w-50 mx-auto" p-4 mt-3 asp-action="Sign Up">
        <h2 class="text-center">Sign Up </h2>
        <div class="form-group">
            <input asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="@Model.Surname" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="@Model.Password" class="form-control" style="max-width:400px " /> @* MaxWidth *@
        </div>
        <div class="form-group">
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <input type="submit" class="btn btn-primary btn-sm" value="Sign In" />

        Do you have an account?<a asp-action="SignIn" class=" btn btn-link btn-sm"> Sign In</a>
    </form>

</body>
</html>
